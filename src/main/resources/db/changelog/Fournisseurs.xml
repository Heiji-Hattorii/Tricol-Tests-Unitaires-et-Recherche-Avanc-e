<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-fournisseur-table" author="dev">
        <createTable tableName="fournisseurs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nom" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="raison_sociale" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="adresse" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="personne_contact" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="telephone" type="VARCHAR(20)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="ville" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="ICE" type="VARCHAR(15)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>



</databaseChangeLog>
