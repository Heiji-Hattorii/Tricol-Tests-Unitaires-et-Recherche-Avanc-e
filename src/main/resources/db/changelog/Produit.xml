<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-produit-table" author="hajar">
        <createTable tableName="produits">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="reference" type="VARCHAR(200)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="nom" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="prix_unitaire" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="categorie" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="stock_actuel" type="INT" defaultValueNumeric="0"/>
            <column name="point_commande" type="INT" defaultValueNumeric="0"/>
            <column name="unite_mesure" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>
